---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
  [type="text"],
  [type="email"],
  [type="url"],
  [type="password"],
  [type="number"],
  [type="date"],
  [type="datetime-local"],
  [type="month"],
  [type="search"],
  [type="tel"],
  [type="checkbox"],
  [type="radio"],
  [type="time"],
  [type="week"],
  [multiple],
  textarea,
  select {
    @apply pt-1 pb-1 border-slate-300 rounded;
  }

  html,
  body {
    @apply bg-slate-50;
    min-height: 100vh;
  }

  body {
    background: repeat url("../assets/bg2.png");
    @apply p-5;
  }
</style>
